BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    TextInput:
        id: note_input
        hint_text: "Write your note here..."
        size_hint_y: 0.8
        multiline: True

    Button:
        text: "Save Note"
        size_hint_y: 0.2
        on_press: app.save_note()

